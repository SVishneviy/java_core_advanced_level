            fx:controller="homework_4_2.Controller" >
   <stylesheets>
      <URL value="@font_size.css" />
   </stylesheets>
   <top>
      <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="Infinity" editable="false" />
   </top>
   <bottom>
      <GridPane prefHeight="400.0" prefWidth="Infinity">
